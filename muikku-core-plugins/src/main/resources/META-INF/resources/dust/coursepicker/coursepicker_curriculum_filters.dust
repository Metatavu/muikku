{?curriculums}
  <div class="mf-categories">
    <div class="mf-category-title"><span>{#localize key="plugin.coursepicker.filters.curriculum"/}</span></div>
    <ul class="mf-category-content cp-filters-ul"> 
      {#curriculums}
        <li id="{type}-{id}"{@eq key=defaultCurriculum value=identifier}class="selected"{/eq}>
          <a class="mf-category-item-plain cp-curriculum-filter" data-id="{identifier}">
            <span>{name}</span>
          </a></li>    
        </li>    
      {/curriculums}
    </ul>
  </div>
{/curriculums}
