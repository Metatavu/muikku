<div class="cm-newMessage">
  <form>
    <input type="hidden" name="communicatorMessageId" value="{communicatorMessageId}" />
  
    <div>
      <input type="button" name="send" value='{#localize key="plugin.communicator.newmessage.send"/}'/>
      <input type="button" name="save" value='{#localize key="plugin.communicator.newmessage.save"/}'/>
      <select name="templateSelector">
        <option value="">{#localize key="plugin.communicator.newmessage.templates"/}</option>
        {#templates}
          <option value="{id}">{name}</option>
        {/templates}
      </select>
      <select name="signatureSelector">
        <option value="">{#localize key="plugin.communicator.newmessage.signatures"/}</option>
        {#signatures}
          <option value="{id}">{name}</option>
        {/signatures}
      </select>
      <input type="button" name="cancel" value='{#localize key="plugin.communicator.newmessage.cancel"/}'/>
    </div>
    <div>
      {#localize key="plugin.communicator.newmessage.recipients"/}
<!--       <select> -->
<!--         <option value=""></option> -->
<!--         <option value="opiskelijat">{#localize key="plugin.communicator.newmessage.recipients.students"/}</option> -->
<!--         <option value="opettajat">{#localize key="plugin.communicator.newmessage.recipients.teachers"/}</option> -->
<!--       </select> -->
      <div class="recipientsList">
        {#recipients}
          {>"communicator/communicator_messagerecipient.dust"/}
        {/recipients}
      </div>
      <input type="text" name="userInput"/>
      <div class="recipientSelector">
      </div>
    </div>

    <div>
      {#localize key="plugin.communicator.subject"/} <input type="text" name="subject" value='{#localize key="plugin.communicator.subjectreplyprefix"/}{subject}'/>
    </div>

    <div>
      <textarea name="content">
        {content}
      </textarea>
    </div>
  </form>

</div>
