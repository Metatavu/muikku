<section class="evaluation-modal-evaluateFormWrapper" id="evaluationEvaluateFormWrapper">
  <header class="evaluation-modal-evaluateForm-header">
    <h2 class="evaluation-modal-evaluateForm-title">Tehtävän arviointi</h2>
    <div class="evaluation-modal-evaluateForm-meta-wrapper">
      <div class="meta-education-type">
        <span class="title">Opiskelijan linja</span><span class="desc">Lukio</span>
      </div>
      <div class="meta-workspace">
        <span class="title">Kurssi</span><span class="desc">GE1 - Sininen planeetta</span>
      </div>
    </div>
  </header>
  <div class="evaluation-modal-evaluateForm-content"> 
    <div class="evaluation-modal-evaluateForm-literal-eval-wrapper">
      <label for="evaluateFormLiteralEvaluation">Sanallinen arviointi</label>
      <textarea id="evaluateFormLiteralEvaluation"></textarea>
    </div>
    <div class="evaluation-modal-evaluateForm-date-wrapper">
      <label for="evaluated">Päivämäärä</label>
      <input required="required" type="date" name="evaluated"/>
    </div>
    <div class="evaluation-modal-evaluateForm-grade-wrapper">
      <label for="grade">Arvosana</label>
      <select name="grade">
        {#gradingScales}
          <optgroup label="{name}">
          {#grades scaleid=id scaleds=dataSource}
            <option value="{id}/{dataSource}@{scaleid}/{scaleds}">
              {name}
            </option>
          {/grades}
          </optgroup>
        {/gradingScales}
      </select>
    </div>
    <div class="evaluation-modal-evaluateForm-basedOfPhenomenon-wrapper">
      <label for="evaluateFormLiteralEvaluation">Ilmiön osuus suorituksesta</label>
    
    </div>
    <div class="evaluation-modal-evaluateForm-valuer-wrapper">
      <label for="evaluateFormLiteralEvaluation">Arvioija</label>
      <select name="assessor">
      {#assessors}
        {@eq key=selected value="true" type="boolean"}
          <option value="{userEntityId}" selected="selected">{displayName}</option>
        {:else}
          <option value="{userEntityId}">{displayName}</option>
        {/eq}
      {/assessors}
      </select>
    </div>
  </div>
</section>
