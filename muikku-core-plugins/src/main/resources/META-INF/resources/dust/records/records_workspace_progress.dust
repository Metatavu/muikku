{#progress}
  {?evaluablesDonePercent}
    <div title='{#localize key="plugin.workspace.progress.evaluable.title"/}' class="tr-item-header-detail evaluable c100 p{evaluablesDonePercent} small">
      <span>{evaluablesDone}/{evaluablesTotal}</span>
      <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
      </div>
    </div>
  {:else}
    <div class="tr-item-header-detail evaluable c100  p{exercisesDonePercent} small">
      <span>0</span>
      <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
      </div>
    </div>    
  {/evaluablesDonePercent}  
  
  {?exercisesDonePercent}
    <div title='{#localize key="plugin.workspace.progress.exercise.title"/}' class="tr-item-header-detail exercise c100 green p{exercisesDonePercent} small">
      <span>{exercisesAnswered}/{exercisesTotal}</span>
      <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
      </div>
    </div>   
  {:else}
   <div class="tr-item-header-detail exercise c100 p0 small">
      <span>0</span>      
      <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
      </div>
    </div>
  {/exercisesDonePercent}
{/progress}