<div class="evaluation-modal-evaluate-form"> 
  <input type="hidden" name="assessmentIdentifier" id="assessmentIdentifier" value="{assessmentIdentifier}"/>
  <input type="hidden" name="workspaceEntityId" id="workspaceEntityId" value="{workspaceEntityId}"/>
  <input type="hidden" name="workspaceEntityId" id="userEntityId" value="{userEntityId}"/>
  <div class="evaluation-modal-evaluate-form-row">
    <label for="evaluateFormLiteralEvaluation">{#localize key="plugin.evaluation.workspaceEvaluationDialog.literalAssessment"/}</label>
    <textarea id="evaluateFormLiteralEvaluation"></textarea>
  </div>
  <div class="evaluation-modal-evaluate-form-row">
    <label for="evaluationDate">{#localize key="plugin.evaluation.workspaceEvaluationDialog.assessmentDate"/}</label>
    <input required="required" type="date" name="evaluationDate" id="evaluationDate"/>
  </div>
  <div class="evaluation-modal-evaluate-form-row">
    <label for="grade">{#localize key="plugin.evaluation.workspaceEvaluationDialog.assessmentGrade"/}</label>
    <select name="grade" id="grade">
      {#gradingScales}
        <optgroup label="{name}">
        {#grades scaleid=id scaleds=dataSource}
          <option value="{scaleds}-{scaleid}@{dataSource}-{id}">
            {name}
          </option>
        {/grades}
        </optgroup>
      {/gradingScales}
    </select>
  </div>
  <div class="evaluation-modal-evaluate-form-row">
    <label for="evaluateFormLiteralEvaluation">{#localize key="plugin.evaluation.workspaceEvaluationDialog.assessmentAssessor"/}</label>
    <select name="assessor" id="assessor">
      {#assessors}
        <option value="{userIdentifier}">{lastName}, {firstName}</option>
      {/assessors}
    </select>
  </div>
  <div class="evaluation-modal-evaluate-form-row">
    <div class="eval-modal-evaluate-buttonset">
      <div class="eval-modal-evaluate-button button-delete">POISTA ARVIOINTI</div>
      <div class="eval-modal-evaluate-button button-evaluate-nonpassing" style="display:none;">TÄYDENNETTÄVÄ</div>
      <div class="eval-modal-evaluate-button button-evaluate-passing">ARVIOI OPINTOJAKSO</div>
      <div class="eval-modal-evaluate-button button-cancel">PERUUTA</div>
    </div>
  </div>
</div>