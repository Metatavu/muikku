<div class="evaluation-request" data-workspace-entity-id="{workspaceEntityId}">
  <!-- CLASS:
  evaluation-requested: arviointi pyydetty 
  evaluated-incomplete: täydennettävä 
  evaluated-passed: arvioitu 
  -->
  <div class="evaluation-request-title">
    <div class="evaluation-request-student">{lastName}, {firstName}</div>
    <div class="evaluation-request-study-programme">{studyProgramme}</div>
  </div>
  <div class="evaluation-request-data">
    <div class="evaluation-request-data-row">
      <span class="evaluation-request-data-label">{#localize key="plugin.evaluation.card.joinedWorkspaceLabel"/}</span>
      <span class="evaluation-request-data-text">{enrollmentDate|formatDate}</span>
    </div>
    <div class="evaluation-request-data-row {?assessmentRequestDate}{^evaluationDate}highlight{/evaluationDate}{/assessmentRequestDate}">
      <span class="evaluation-request-data-label">{#localize key="plugin.evaluation.card.evaluationRequestedLabel"/}</span>
      <span class="evaluation-request-data-text">{assessmentRequestDate|formatDate}</span>
    </div>
    {?evaluationDate}
      <div class="evaluation-request-data-row highlight">
        <span class="evaluation-request-data-label">{#localize key="plugin.evaluation.card.evaluatedLabel"/}</span>
        <span class="evaluation-request-data-text">{evaluationDate|formatDate}</span>
      </div>
    {/evaluationDate}
    <div class="evaluation-request-data-row">
      <span class="evaluation-request-data-label">{#localize key="plugin.evaluation.card.assignmentsDoneLabel"/}</span>
      <span class="evaluation-request-data-text assignments-status {@eq key=assignmentsDone value=assignmentsTotal}all-done{/eq} {@ne key=assignmentsDone value=assignmentsTotal}not-done{/ne}">{assignmentsDone}/{assignmentsTotal}</span>
    </div>
    <div class="evaluation-request-button-row">
      <div class="evaluation-request-card-button archive-button icon-delete" title="{#localize key="plugin.evaluation.card.button.archiveButtonLabel"/}"></div>
      <div class="evaluation-request-card-button evaluate-button icon-evaluate" title="{#localize key="plugin.evaluation.card.button.evaluateButtonLabel"/}"></div>
    </div>
  </div>
</div>