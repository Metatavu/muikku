<div class="mf-item an-announcement" id="{id}">
  <div class="mf-item-header-container an-announcement-header-container default">
    <div class="mf-item-select an-announcement-select"><input type="checkbox" name="messageSelect" value="{communicatorMessageId}" /></div>
    <div class="mf-item-header-label an-announcement-dates"><span>{startDate|formatDate}</span>-<span>{endDate|formatDate}</span></div>
  </div>
  <div class="mf-item-details an-announcement-details">
   <div class="an-announcement-topic"><span>{caption}</span></div>
   <div class="an-announcement-content">{content|s}</div>
   <div class="an-announcement-tools">
     <div class="an-announcement-tool an-announcement-edit-link mf-item-tool-btn"><span>{#localize key="plugin.announcement.button.edit"/}</span></div>
   </div>
  </div>
</div>
